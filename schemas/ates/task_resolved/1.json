{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Task.Resolved.v1",
  "description": "json schema for task resolved event (version 1)",

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "task_uuid": {
          "type": "string"
        },
        "resolver_uuid": {
          "type": "string"
        }
      },
      "required": [
        "task_uuid",
        "resolver_uuid"
      ]
    }
  },

  "type": "object",

  "properties": {
    "event_name":    { "type": "string" },
    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_name",
    "data"
  ]
}

