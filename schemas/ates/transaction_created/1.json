{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Transaction.Created.v1",
  "description": "json schema for transaction created event (version 1)",
  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string"
        },
        "credit": {
          "type": "integer"
        },
        "debit": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "user_uuid": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        }
      },
      "required": [
        "uuid",
        "credit",
        "debit",
        "type",
        "desc",
        "user_uuid",
        "created_at"
      ]
    }
  },

  "type": "object",

  "properties": {
    "event_name":    { "type": "string" },
    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_name",
    "data"
  ]
}

